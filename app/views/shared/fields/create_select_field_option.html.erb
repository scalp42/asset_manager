<div class="modal hide" id="myCreateSelectFieldOptionModal" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myCreateSelectFieldOptionModal">Ã—</button>
    <h3>Create Option</h3>
  </div>
  <div class="modal-body" align="center">

    <form method="post" class="well" action="configure_field" >
        <table>
          <tr>
            <td><%=  text_field("value","select_field_value") %> </td>

            <%= hidden_field('field_id', 'field_id',:value=>field.id) %>
            <% if parentOption != nil %>
                <%= hidden_field('parent_option_id', 'parent_option_id',:value=>parentOption) %>
            <% end %>
          </tr>
        </table>
        <div class="modal-footer">

          <%= submit_tag "Create" ,:class => 'btn btn-primary'%>
          <a data-toggle="modal" href="#myCreateSelectFieldOptionModal" class="btn secondary">No</a>
        </div>
    </form>
  </div>

</div>