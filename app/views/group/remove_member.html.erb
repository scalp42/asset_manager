<div class="modal hide" id="myRemoveMember<%= group.id %>" style="display: none;">
  <div class="modal-header">
    <button class="close" data-toggle="modal" href="#myRemoveMember<%= group.id %>">Ã—</button>
    <h3 style="text-align: center;">Remove Members</h3>
  </div>
  <div class="modal-body" align="center">
    <form method="post" class="well" action="/group/remove_members" onsubmit="return $(this).validate()">
      <input name="authenticity_token" type="hidden" value="token_value">
      <table>
        <tr>
          <td><%=  select('users','users', getUsersInGroup(group.id).collect {|p| [ p.full_name, p.id ] },{},{:multiple => true,"data-validation" => "required"}) %></td>
        </tr>
      </table>
      <div class="modal-footer">
        <%= submit_tag "Remove" ,:class => 'btn btn-primary'%>
        <a data-toggle="modal" href="#myRemoveMember<%= group.id %>" class="btn secondary">No</a>
      </div>
      <%= hidden_field('group', 'group_id',:value=> group.id) %>
    </form>
  </div>
</div>
<a class="btn" data-toggle="modal" href="#myRemoveMember<%= group.id %>" >Remove Members</a>